model users {
  id           Int        @id @default(autoincrement())
  okulNo       Int        @unique
  email        String     @unique
  sifre        String
  kiralananlar kirakitap?
}

model kirakitap {
  id      Int       @id @default(autoincrement())
  user    users     @relation(fields: [userId], references: [id])
  userId  Int       @unique
  kitap   kitaplar? @relation(fields: [kitapId], references: [id])
  kitapId Int       @unique
  time    Int       @default(0)
}

model kitaplar {
  id          Int         @id @default(autoincrement())
  adi         String
  basimYili   String
  adet        Int
  kalanKitap  Int
  yazar       String
  sayfaSayisi Int
  kategori    String
  KiraKitap   kirakitap[]
  
}

model Kategoriler {
  id           Int    @id @default(autoincrement())
  kategoriIsmi String
}